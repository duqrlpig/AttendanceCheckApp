<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        tools:context="com.example.user.myapplication.loginActivity"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp">


        <ImageView
            android:id="@+id/logoView"
            android:layout_width="130dp"
            android:layout_height="230dp"
            android:layout_alignLeft="@+id/id_text"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/id_text"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/id_text"
            android:layout_alignLeft="@+id/id_text"
            android:layout_alignStart="@+id/id_text"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/page1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="CHECK SYSTEM"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/id_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pwd_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:background="@drawable/my_border"
            android:hint="Student Number"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#A9A9A9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="358dp" />

        <EditText
            android:id="@+id/pwd_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LOGIN"
            android:layout_alignLeft="@+id/id_text"
            android:layout_alignStart="@+id/id_text"
            android:layout_marginBottom="28dp"
            android:background="@drawable/my_border"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#A9A9A9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="418dp" />


        <Button
            android:id="@+id/LOGIN"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:background="@drawable/buttonshape"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.964" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>